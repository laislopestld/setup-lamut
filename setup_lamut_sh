# ========== FunÃ§Ãµes ==========

menu_instalacao() {
    clear
    echo "==============================================="
    echo "         MENU DE INSTALAÃ‡ÃƒO LAMUT               "
    echo "==============================================="
    echo "1) Instalar Traefik + Portainer"
    echo "2) Instalar Chatwoot"
    echo "3) Instalar N8N"
    echo "0) Sair"
    echo ""
    read -p "Escolha uma opÃ§Ã£o: " opcao

    case $opcao in
        1) instalar_traefik_portainer ;;
        2) instalar_chatwoot ;;
        3) instalar_n8n ;;
        0) echo "Saindo..."; exit 0 ;;
        *) echo "OpÃ§Ã£o invÃ¡lida."; sleep 2; menu_instalacao ;;
    esac
}

instalar_traefik_portainer() {
    clear
    echo "==============================================="
    echo "Instalando Traefik + Portainer"
    echo "==============================================="

    read -p "Digite o domÃ­nio para Traefik (ex: traefik.exemplo.com): " dominio_traefik
    read -p "Digite seu e-mail para Let's Encrypt: " email_traefik

    mkdir -p ~/traefik
    cd ~/traefik

    cat > docker-compose.yml <<EOF
version: '3'

services:
  traefik:
    image: traefik:v2.5
    command:
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--entrypoints.web.address=:80"
      - "--entrypoints.websecure.address=:443"
      - "--certificatesresolvers.myresolver.acme.httpchallenge=true"
      - "--certificatesresolvers.myresolver.acme.httpchallenge.entrypoint=web"
      - "--certificatesresolvers.myresolver.acme.email=$email_traefik"
      - "--certificatesresolvers.myresolver.acme.storage=/letsencrypt/acme.json"
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "./letsencrypt:/letsencrypt"
    labels:
      - "traefik.http.routers.api.rule=Host(\`$dominio_traefik\`)"
      - "traefik.http.routers.api.service=api@internal"
      - "traefik.http.routers.api.entrypoints=websecure"
      - "traefik.http.routers.api.tls.certresolver=myresolver"

  portainer:
    image: portainer/portainer-ce
    command: -H unix:///var/run/docker.sock
    ports:
      - "9000:9000"
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "portainer_data:/data"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.portainer.rule=Host(\`portainer.$dominio_traefik\`)"
      - "traefik.http.routers.portainer.entrypoints=websecure"
      - "traefik.http.routers.portainer.tls.certresolver=myresolver"

volumes:
  portainer_data:
EOF

    mkdir -p ~/traefik/letsencrypt
    touch ~/traefik/letsencrypt/acme.json
    chmod 600 ~/traefik/letsencrypt/acme.json

    docker-compose up -d

    echo "âœ… Traefik e Portainer instalados com sucesso!"
    echo "ðŸŒ Acesse https://$dominio_traefik para gerenciar certificados."
    echo "ðŸŒ Acesse https://portainer.$dominio_traefik para gerenciar containers."
    sleep 5
    menu_instalacao
}

instalar_chatwoot() {
    clear
    echo "==============================================="
    echo "Instalando Chatwoot"
    echo "==============================================="

    read -p "Digite o domÃ­nio para o Chatwoot (ex: chat.exemplo.com): " dominio_chatwoot

    mkdir -p ~/chatwoot
    cd ~/chatwoot

    cat > docker-compose.yml <<EOF
version: '3'

services:
  chatwoot:
    image: chatwoot/chatwoot:latest
    environment:
      - "FRONTEND_URL=https://$dominio_chatwoot"
    ports:
      - "3000:3000"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.chatwoot.rule=Host(\`$dominio_chatwoot\`)"
      - "traefik.http.routers.chatwoot.entrypoints=websecure"
      - "traefik.http.routers.chatwoot.tls.certresolver=myresolver"
EOF

    docker-compose up -d

    echo "âœ… Chatwoot instalado com sucesso!"
    echo "ðŸŒ Acesse https://$dominio_chatwoot"
    sleep 5
    menu_instalacao
}

instalar_n8n() {
    clear
    echo "==============================================="
    echo "Instalando N8N"
    echo "==============================================="

    read -p "Digite o domÃ­nio para o N8N (ex: n8n.exemplo.com): " dominio_n8n

    mkdir -p ~/n8n
    cd ~/n8n

    cat > docker-compose.yml <<EOF
version: '3'

services:
  n8n:
    image: n8nio/n8n:latest
    environment:
      - "WEBHOOK_URL=https://$dominio_n8n/"
    ports:
      - "5678:5678"
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.n8n.rule=Host(\`$dominio_n8n\`)"
      - "traefik.http.routers.n8n.entrypoints=websecure"
      - "traefik.http.routers.n8n.tls.certresolver=myresolver"
EOF

    docker-compose up -d

    echo "âœ… N8N instalado com sucesso!"
    echo "ðŸŒ Acesse https://$dominio_n8n"
    sleep 5
    menu_instalacao
}

# ========== Iniciar Menu ==========
menu_instalacao
