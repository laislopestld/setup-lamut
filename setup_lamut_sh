read -p "Ao digitar Y vocÃª aceita e concorda com as orientaÃ§Ãµes acima (Y/N): " AGREEMENT

if [[ "$AGREEMENT" != "Y" && "$AGREEMENT" != "y" ]]; then
    echo "VocÃª nÃ£o aceitou os termos. Abortando instalaÃ§Ã£o."
